{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "./" /* Base directory to resolve non-absolute module names. */,
    "paths": {
      "@/muya/*": ["src/muya/*"],
      "@/typings/*": ["types/*"]
    },
    "resolveJsonModule": true
  }
}
